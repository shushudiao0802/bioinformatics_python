def ReverseComplement(Pattern):   
    # your code here
    Pattern = Complement(Pattern) 
    Pattern = Reverse(Pattern) 
    return Pattern
    
def Reverse(Pattern):
    # your code here
    Reverse_pattern = Pattern[::-1]
    return Reverse_pattern

def Complement(Pattern):
    # your code here
    complement_string = ""
    for char in Pattern:
        if char == "A":
            complement_string += "T"
        if char == "T":
            complement_string += "A"
        if char == "G":
            complement_string += "C"
        if char == "C":
            complement_string += "G"
    return complement_string
